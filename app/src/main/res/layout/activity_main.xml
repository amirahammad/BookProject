<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tasks.com.bookproject.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/pattern9"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="#891ebf"
                android:padding="10dp"

                >

                <ImageView
                    android:id="@+id/shareButton"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/share_app"
                    android:onClick="doSomething"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:id="@+id/closeButton"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/close_app"
                    android:onClick="doSomething"
                    android:scaleType="centerCrop"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:src="@drawable/logo_alfki" />

                <ImageView
                    android:layout_width="210dp"
                    android:layout_height="60dp"
                    android:src="@drawable/logo_word" />


            </LinearLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="135dp"
                android:columnCount="2"
                android:rowCount="2">

                <LinearLayout
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:background="@drawable/rounded_button"
                    android:id="@+id/aboutElFekiLayout"
                    android:layout_width="170dp"
                    android:layout_height="80dp"
                    android:orientation="vertical"
                    android:onClick="doSomething"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/person" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="عن المؤلف"
                        android:textColor="#fff"
                        android:textSize="40px" />
                </LinearLayout>

                <LinearLayout
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:id="@+id/showingBookLayout"
                    android:layout_width="170dp"
                    android:layout_height="80dp"
                    android:orientation="vertical"
                    android:onClick="doSomething"
                    android:background="@drawable/rounded_button"
                    android:layout_marginLeft="5dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/book" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="تصفح الكتاب"
                        android:textColor="#fff"
                        android:textSize="40px"
                        android:id="@+id/textView" />
                </LinearLayout>

                <LinearLayout
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:id="@+id/aboutAppLayout"
                    android:layout_width="170dp"
                    android:layout_height="80dp"
                    android:orientation="vertical"
                    android:onClick="doSomething"
                    android:background="@drawable/rounded_button"
                    android:layout_marginLeft="5dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/about_app" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="عن التطبيق"
                        android:textColor="#fff"
                        android:textSize="40px" />
                </LinearLayout>

                <LinearLayout
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:id="@+id/famousSentence"
                    android:layout_width="170dp"
                    android:layout_height="80dp"
                    android:orientation="vertical"
                    android:onClick="doSomething"
                    android:background="@drawable/rounded_button"
                    android:layout_marginLeft="5dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/review" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="اشهرالمقولات"
                        android:textColor="#fff"
                        android:textSize="40px" />
                </LinearLayout>

            </GridLayout>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>
